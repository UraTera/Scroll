<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92A0FF"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <androidx.cardview.widget.CardView
        style="@style/card"
        android:backgroundTint="@color/navigation"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="@dimen/radius"
        app:cardElevation="@dimen/elevation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Sync HorizontalScrollView"
        android:textColor="@color/white"
        android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/card"
        android:backgroundTint="@color/color_top"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="@dimen/radius"
        app:cardElevation="@dimen/elevation">

        <com.tera.scroll.CustomScroll
            android:id="@+id/scroll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/line_height"
                android:orientation="horizontal"
                tools:ignore="VisualLintBounds">

                <TextView
                    style="@style/text"
                    android:text="1" />

                <TextView
                    style="@style/text"
                    android:text="2" />

                <TextView
                    style="@style/text"
                    android:text="3" />

                <TextView
                    style="@style/text"
                    android:text="4" />

                <TextView
                    style="@style/text"
                    android:text="5" />

                <TextView
                    style="@style/text"
                    android:text="6" />

                <TextView
                    style="@style/text"
                    android:text="7" />

            </LinearLayout>

        </com.tera.scroll.CustomScroll>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/card"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="@dimen/radius"
        app:cardElevation="@dimen/elevation">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <com.tera.scroll.CustomScroll
                android:id="@+id/scroll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:scrollbars="none"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/color_1"
                        android:orientation="horizontal"
                        tools:ignore="VisualLintBounds">

                        <TextView
                            style="@style/text"
                            android:text="1" />

                        <TextView
                            style="@style/text"
                            android:text="2" />

                        <TextView
                            style="@style/text"
                            android:text="3" />

                        <TextView
                            style="@style/text"
                            android:text="4" />

                        <TextView
                            style="@style/text"
                            android:text="5" />

                        <TextView
                            style="@style/text"
                            android:text="6" />

                        <TextView
                            style="@style/text"
                            android:text="7" />

                    </LinearLayout>
                    <!-- 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/color_2"
                        android:orientation="horizontal"
                        tools:ignore="VisualLintBounds">

                        <TextView
                            style="@style/text"
                            android:text="1" />

                        <TextView
                            style="@style/text"
                            android:text="2" />

                        <TextView
                            style="@style/text"
                            android:text="3" />

                        <TextView
                            style="@style/text"
                            android:text="4" />

                        <TextView
                            style="@style/text"
                            android:text="5" />

                        <TextView
                            style="@style/text"
                            android:text="6" />

                        <TextView
                            style="@style/text"
                            android:text="7" />

                    </LinearLayout>
                    <!-- 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/color_3"
                        android:orientation="horizontal"
                        tools:ignore="VisualLintBounds">

                        <TextView
                            style="@style/text"
                            android:text="1" />

                        <TextView
                            style="@style/text"
                            android:text="2" />

                        <TextView
                            style="@style/text"
                            android:text="3" />

                        <TextView
                            style="@style/text"
                            android:text="4" />

                        <TextView
                            style="@style/text"
                            android:text="5" />

                        <TextView
                            style="@style/text"
                            android:text="6" />

                        <TextView
                            style="@style/text"
                            android:text="7" />

                    </LinearLayout>
                    <!-- 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/color_4"
                        android:orientation="horizontal"
                        tools:ignore="VisualLintBounds">

                        <TextView
                            style="@style/text"
                            android:text="1" />

                        <TextView
                            style="@style/text"
                            android:text="2" />

                        <TextView
                            style="@style/text"
                            android:text="3" />

                        <TextView
                            style="@style/text"
                            android:text="4" />

                        <TextView
                            style="@style/text"
                            android:text="5" />

                        <TextView
                            style="@style/text"
                            android:text="6" />

                        <TextView
                            style="@style/text"
                            android:text="7" />

                    </LinearLayout>
                    <!-- 5 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/color_5"
                        android:orientation="horizontal"
                        tools:ignore="VisualLintBounds">

                        <TextView
                            style="@style/text"
                            android:text="1" />

                        <TextView
                            style="@style/text"
                            android:text="2" />

                        <TextView
                            style="@style/text"
                            android:text="3" />

                        <TextView
                            style="@style/text"
                            android:text="4" />

                        <TextView
                            style="@style/text"
                            android:text="5" />

                        <TextView
                            style="@style/text"
                            android:text="6" />

                        <TextView
                            style="@style/text"
                            android:text="7" />

                    </LinearLayout>

                </LinearLayout>

            </com.tera.scroll.CustomScroll>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>